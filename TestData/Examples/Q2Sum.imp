method Sum(int n) returns (int sum)
    requires n > 0
    ensures sum == 5 * n * (n + 1)
{
    sum = 0;
    int i = n;
    while (i > 0)
        invariant sum == 5 * (n - i) * (n + i + 1)
    {
        int k = 0;
        int j = i;
        while (j > 0)
            invariant k == 10 * (i - j)
        {
            k = k + 10;
            j = j - 1;
        }
        sum = sum + k;
        i = i - 1;
    }
}
